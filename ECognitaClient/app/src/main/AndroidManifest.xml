<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rwth.elearning.ecognita.client.ecognitaclient">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <permission
        android:name="rwth.elearning.ecognita.client.ecognitaclient.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="rwth.elearning.ecognita.client.ecognitaclient.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".authorization.SignInActivity"
            android:label="@string/signin_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".courses.MyCoursesActivity"
            android:label="@string/mycourses_activity_label"></activity>
        <activity android:name=".courses.coursedetails.CourseDetailsActivity"></activity>
        <activity android:name=".courses.AllCoursesActivity"></activity>
        <activity android:name=".courses.coursedetails.QuizActivity"></activity>

        <receiver
            android:name=".settings.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.hmkcode.android.gcm" />
            </intent-filter>
        </receiver>
        <service android:name=".settings.GcmMessageHandler" />
    </application>

</manifest>
