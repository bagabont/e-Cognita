<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16pt">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribe_for_notifications"
        android:id="@+id/subscribe_for_notifications_button"
        android:background="@color/marine"
        android:textColor="@color/white"
        android:layout_weight="2"
        android:padding="10dp"/>

    <Space
        android:layout_width="10dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unsubscribe_for_notifications"
        android:id="@+id/unsubscribe_for_notifications_button"
        android:background="@color/marine"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:padding="10dp"/>
</LinearLayout>